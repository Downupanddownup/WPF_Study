<UserControl x:Class="WpfApp1.SubPage.UserControl3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.SubPage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 查询和操作区域 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
            <Label Content="名称:" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchTextBox" Width="200" Height="25" Margin="5,0" VerticalAlignment="Center"/>
            <Button x:Name="SearchButton" Content="查询" Width="60" Height="25" Margin="5,0" Click="SearchButton_Click"/>
            <Button x:Name="RefreshButton" Content="刷新" Width="60" Height="25" Margin="5,0" Click="RefreshButton_Click"/>
            <Button x:Name="AddButton" Content="新增" Width="60" Height="25" Margin="20,0,5,0" Click="AddButton_Click"/>
        </StackPanel>
        
        <!-- 数据列表 -->
        <DataGrid Grid.Row="1" x:Name="RecordsDataGrid" Margin="10" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="操作" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="编辑" Width="50" Height="25" Margin="2" Click="EditButton_Click" Tag="{Binding}"/>
                                <Button Content="删除" Width="50" Height="25" Margin="2" Click="DeleteButton_Click" Tag="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
